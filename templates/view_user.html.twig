{% extends "base.html.twig" %}
{% block title %}User{% endblock %}
{% block body %}
    <style>
        button {
            background-color: #c5d0e6;
        }
        a {
            text-decoration: none;
        }
    </style>
    <a href="/view_all_users">Перейти к списку пользователей</a> 
    <h1>Данные о пользователе:</h1>
    <label>First Name: </label>{{ firstName }}<br/>
    <label>Last Name: </label>{{ lastName }}<br/>
    <label>Middle Name: </label>{{ middleName }}<br/>
    <label>Gender: </label>{{ gender }}<br/>
    <label>Birth Date: </label>{{ birthDate }}<br/>
    <label>Email: </label>{{ email }}<br/>
    <label>Phone: </label>{{ phone }}<br/>
    <label>Avatar path: 
        {% if avatarPath != null %}
            </label><img width=200px src="/../uploads/{{ avatarPath }}">
        {% endif %}
    <br><br>
    <a href="/update_user/{{ userId }}"><button>Изменить</button></a> 
    <a href="/delete_user/{{ userId }}"><button>Удалить</button></a>
{% endblock %}